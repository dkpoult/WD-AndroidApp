<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AnnouncementSender">

    <EditText
        android:elevation="10dp"
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/announcement_title"
        android:inputType="textPersonName" />

    <EditText
        android:elevation="10dp"
        android:id="@+id/edtBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/announcement_body"
        android:inputType="textPersonName" />

    <Button
        android:elevation="10dp"
        android:background="@drawable/rounded_button"
        android:id="@+id/btnCreateAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickMakeAnnouncement"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded_button"
        android:text="@string/create_announcement" />
</LinearLayout>